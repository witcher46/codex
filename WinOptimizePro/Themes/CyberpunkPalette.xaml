<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Color Palette -->
    <Color x:Key="Color.Background">#05070D</Color>
    <Color x:Key="Color.Surface">#0A1222</Color>
    <Color x:Key="Color.SurfaceAlt">#111A2E</Color>
    <Color x:Key="Color.Border">#263352</Color>
    <Color x:Key="Color.NeonGreen">#39FFB6</Color>
    <Color x:Key="Color.NeonPurple">#AD6BFF</Color>
    <Color x:Key="Color.Warning">#FF5EA8</Color>
    <Color x:Key="Color.TextPrimary">#E3F3FF</Color>
    <Color x:Key="Color.TextMuted">#8CA4C7</Color>

    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}" />
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}" />
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource Color.SurfaceAlt}" />
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}" />
    <SolidColorBrush x:Key="Brush.NeonGreen" Color="{StaticResource Color.NeonGreen}" />
    <SolidColorBrush x:Key="Brush.NeonPurple" Color="{StaticResource Color.NeonPurple}" />
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}" />
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}" />
    <SolidColorBrush x:Key="Brush.TextMuted" Color="{StaticResource Color.TextMuted}" />

    <LinearGradientBrush x:Key="Brush.Sidebar" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#0D1222" />
        <GradientStop Offset="1" Color="#0A0F1D" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#111B31" />
        <GradientStop Offset="1" Color="#090F1D" />
    </LinearGradientBrush>
</ResourceDictionary>
